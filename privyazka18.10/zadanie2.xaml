<Window x:Class="YourNamespace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="zadanie2" Height="300" Width="400">

    <StackPanel Margin="10">
        <TextBlock Text="Введите текст:" Margin="0,0,0,5"/>
        <TextBox Name="textBox" AcceptsReturn="True" Height="100" Margin="0,0,0,10"/>

        <TextBlock Text="Размер текста:" Margin="0,0,0,5"/>
        <Slider Name="textSizeSlider" Minimum="8" Maximum="50" 
                IsSnapToTickEnabled="True" 
                Height="25" ValueChanged="TextSizeSlider_ValueChanged"/>

        <Button Content="Сохранить" Click="SaveButton_Click" Width="100" Margin="0,5,0,0"/>
    </StackPanel>
</Window>
